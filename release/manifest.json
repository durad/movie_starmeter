{
  "name": "Movie StarMeter",
  "description": "Shows ratings from IMDB, Metacritic and RottenTomatoes on Cineplex.com",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["http://www.cineplex.com/Showtimes/*"],
      "css": ["cineplex_list.css"],
      "js": [
        "libs/underscore.js",
        "libs/async.js",
        "libs/jquery.js",
        "cineplex_list.js"
      ]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "manifest_version": 2
}
