{
  "name": "Movie StarMeter",
  "description": "Shows ratings from IMDB, Metacritic and RottenTomatoes on Cineplex.com",
  "version": "0.1",

  "content_scripts": [
    {
      "matches": ["http://www.cineplex.com/Showtimes/*"],
      "css": ["style.css"],
      "js": ["underscore.js", "async.js", "jquery.js", "extension.js"]
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "manifest_version": 2
}
